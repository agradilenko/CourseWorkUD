<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#find-btn").on("click", function () {
            const discountName = $('input[name="fullName"]').val();
            $.ajax({
                method: "GET",
                url: "/api/discounts/"+discountName,
            });
        });
    });
</script>
<section id="add" class="container">
    <div class="form-wrap">
        <h1>Find Client</h1>
        {{#each errors}}
            <div class="error">
                <p>{{text}}</p>
            </div>
        {{/each}}
        <form action="search" method="GET">
            <div class="input-group">
                <label for="discountNameSearch">Client Name</label>
                <input type="text" name="discountName" id="discountNameSearch" class="input-box" placeholder="eg. Студент, Школьник." required>
            </div>
            <input type="submit" value="Find Product" class="btn btn-reverse">
        </form>
    </div>
</section>
