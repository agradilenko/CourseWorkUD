<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#update-btn").on("click", function () {
            const productId = $('input[name="productId"]').val();
            const form = $('#updateForm');
            if($("#productId").val()===""){
                $("#productId").attr("disabled", "disabled");
            }
            if($("#quantity").val()===""){
                $("#quantity").attr("disabled", "disabled");
            }
            if($("#discountId").val()===""){
                $("#discountId").attr("disabled", "disabled");
            }

            const data2 = form.serialize();

            $.ajax({
                method: "PUT",
                url: "/api/ordered/"+productId,
                dataType: 'json',
                data:  data2
            });
            window.location.href="http://localhost:8888/api/ordered";
        });
    });
</script>
<section id="add" class="container">
    <div class="form-wrap">
        <h1>Update Order</h1>
        {{#each errors}}
            <div class="error">
                <p>{{text}}</p>
            </div>
        {{/each}}
        <form id="updateForm">

            <div class="input-group">
                <label for="productId">Order id</label>
                <input type="number" name="productId" id="productId" class="input-box" placeholder="eg. 1, 2, 3, 4"  value={{productId}}>
            </div>
            <div class="input-group">
                <label for="productId">Client id</label>
                <input type="number" name="productId" id="productId" class="input-box" placeholder="eg. 1, 2, 3, 4 "
                       maxlength="7" value={{productId}}>
            </div>
            <div class="input-group">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" id="quantity" class="input-box" placeholder="eg. 1, 2, 3, 4"  maxlength="7" value={{quantity}} >
            </div>
            <div class="input-group">
                <label for="discountId">discountId</label>
                <input type="number" name="discountId" id="discountId" class="input-box" placeholder="eg. 1, 2, 3, 4" maxlength="7" value={{discountId}} >
            </div>
        </form>
        <button id="update-btn" class="btn btn-reverse">Update Ordered</button>
    </div>
</section>
