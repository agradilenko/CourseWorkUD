<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#discountId").keyup(function() {
            if (!$(this).val()) {
                $("delete-btn").prop("disabled", true);
            } else {
                $("delete-btn").prop("disabled", false);
            }
        });
        $("#delete-btn").on("click", function () {
            const discountId = $('input[name="discountId"]').val();
            $.ajax({
                method: "DELETE",
                url: "/api/discounts/"+discountId,
            });
            window.location.href="http://localhost:8888/api/discounts";
            alert(discountId);
        });
    });
</script>
<section id="add" class="container">
    <div class="form-wrap">
        <h1>Delete Discount</h1>
        {{#each errors}}
            <div class="error">
                <p>{{text}}</p>
            </div>
        {{/each}}
        <form>
            <div class="input-group">
                <label for="discountId">Discount id</label>
                <input type="number" name="discountId" id="discountId" class="input-box" placeholder="eg. 1, 2, 3, 4"  value={{discountId}}>
            </div>
        </form>
        <button id="delete-btn" class="btn btn-reverse">Delete Discount</button>
    </div>
</section>
