<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#find-btn").on("click", function () {
            const category = $('input[name="category"]').val();
            $.ajax({
                method: "GET",
                url: "/api/types/"+category,
            });
        });
    });
</script>
<section id="add" class="container">
    <div class="form-wrap">
        <h1>Find Type</h1>
        {{#each errors}}
            <div class="error">
                <p>{{text}}</p>
            </div>
        {{/each}}
        <form action="search" method="GET">
            <div class="input-group">
                <label for="categorySearch">Type Name</label>
                <input type="text" name="category" id="categorySearch" class="input-box" placeholder="eg. Видеокарта, Процессор" required>
            </div>
            <input type="submit" value="Find Type" class="btn btn-reverse">
        </form>
    </div>
</section>
